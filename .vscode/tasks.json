{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .."
        },
        {
            "label": "cmake with tests",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake -Dskip_tests:BOOL=OFF .."
        },
        {
            "label": "scanner: build",
            "type": "shell",
            "command": "cd build && make scanner",
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "label": "scanner: run",
            "type": "shell",
            "command": "cd build && demo/scanner",
            "dependsOn": [
                "scanner: build"
            ]
        },
        {
            "label": "parser: build",
            "type": "shell",
            "command": "cd build && make parser",
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "label": "parser: run",
            "type": "shell",
            "command": "cd build && demo/parser",
            "dependsOn": [
                "parser: build"
            ]
        },
        {
            "label": "icode: build",
            "type": "shell",
            "command": "cd build && make icode",
            "dependsOn": [
                "cmake"
            ]
        },
        {
            "label": "icode: run",
            "type": "shell",
            "command": "cd build && demo/icode",
            "dependsOn": [
                "icode: build"
            ]
        },
        {
            "label": "test: build",
            "type": "shell",
            "command": "cd build && make tests",
            "dependsOn": [
                "cmake with tests"
            ]
        },
        {
            "label": "test: run",
            "type": "shell",
            "command": "cd build/test && ./tests",
            "dependsOn": [
                "test: build"
            ]
        }
    ]
}
